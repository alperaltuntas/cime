<?xml version="1.0"?>

<comply version="1.1">

<relation id="OCN_COUPLING" arity="2" relate="COMPSET.COMPSET">
  <entry id="MOM6">
    <assert errMsg="LND or ICE must be present to hide MOM6 grid poles.">DLND|CLM|DICE|CICE</assert>
    <reject errMsg="MOM6 cannot be coupled to single column CAM (SCAM).">CAM[456]%SCAM</reject>
  </entry>
  <entry id="MOM6%BGC">
    <assert errMsg="In BGC mode, MOM6 requires CLM%BGC or no CLM at all">CLM%BGC|SLND|DLND</assert>
  </entry>
</relation>

